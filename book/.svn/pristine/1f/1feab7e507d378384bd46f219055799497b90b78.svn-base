body {
	background-color: #eee;
}

.book {
	position: fixed;
	top: 100px;
	left: 200px;
	width: 500px;
	height: 600px;
	background: url(../images/shukuang.png) no-repeat;
}

.book_context {
	position: fixed;
	top: 200px;
	left: 900px;
	width: 700px;
	height: 1000px;
}
.gl_book_show{
	width:50%;
	position:left;
}
.gl_book_content{
	width:40%;
	position:left;
	padding-left:50%;
	padding-top:2%;
}
.gl_book_assess{
	position:left;
	padding-top:30%;
	padding-left:30%;
}
.gl_book_assess span{
	font-size:20px;
	border:1px solid #8ba7e3;
	align-self:center;
	margin-left:20%;
	top:20px;
}
.gl_book_assess span:hover{
	cursor:pointer;
	background-color:#c0c0c0;
}
.gl_book_page{
	position: absolute;
	align: center;
	font-size: 20px;
	font-family: 微软雅黑;
	padding-left:20%;
	padding-top:20%;
	z-index:-100;
}